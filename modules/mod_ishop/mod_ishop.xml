                            <field name="order_goods" type="list" default="nothing" label="Группы товаров" description="">
                                    <option value="nothing">Нет</option>
                                    <option value="hits">Популярные товары</option>
                                    <option value="novinka_dt">Новинки</option>
                                    <option value="discounts">Скидки</option>
                                    <option value="seen_products">Просмотренные товары</option>
                            </field>

                        </fieldset>
                </fields>

    </config>
