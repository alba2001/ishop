	<description>ISHOP_MOD_ISHOP_CONTENT_DESCRIPTION</description>
    <files>
        <filename>mod_ishop.xml</filename>
        <filename module="mod_ishop">mod_ishop.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    <config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_k2/elements/">
